    "prepack": "yarn build"
  },
  "files": [
    "src",
    "lib"
  ],
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/tap": "^15.0.5",
    "esbuild-register": "^3.0.0",
    "microbundle": "^0.13.3",
    "tap": "^15.0.9",
    "typescript": "^4.4.2"
